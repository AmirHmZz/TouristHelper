<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardview" >
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="main_ac_label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/textview_back</item>
        <item name="android:textSize">@dimen/d_main_labels_textsize</item>
        <item name="android:textColor">@color/main_activity_labels_color</item>
        <item name="android:padding">@dimen/d_main_labels_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
