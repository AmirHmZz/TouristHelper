<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_toolbar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layoutDirection="rtl"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="@dimen/d_toolbar_height"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/d_toolbar_icons_padding"
        android:src="@drawable/ic_menu" />

    <com.entezaar.thelperdemo.ui.irsansTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/menu"
        android:gravity="center"
        app:FontType="ghasem"
        android:text="@string/app_name"
        android:textSize="@dimen/d_toolbar_label_text_size"
        android:textColor="@color/toolbar_items_color" />
    <ImageButton
        android:id="@+id/night_mode"
        android:layout_width="@dimen/d_toolbar_height"
        android:layout_height="match_parent"
        android:src="@drawable/ic_day"
        android:padding="@dimen/d_toolbar_icons_padding"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>